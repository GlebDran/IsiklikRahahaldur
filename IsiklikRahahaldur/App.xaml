<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IsiklikRahahaldur"
             xmlns:converters="clr-namespace:IsiklikRahahaldur.Converters"
             x:Class="IsiklikRahahaldur.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Добавляем конвертеры в ресурсы приложения -->
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:BoolToSignConverter x:Key="BoolToSignConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
