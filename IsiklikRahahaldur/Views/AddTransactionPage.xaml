<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:IsiklikRahahaldur.ViewModels"
             x:Class="IsiklikRahahaldur.Views.AddTransactionPage"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:AddTransactionViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Spacing="15" Padding="20">
        <Label Text="Описание" />
        <Entry Text="{Binding Description}" Placeholder="Например, покупка продуктов" />

        <Label Text="Сумма" />
        <Entry Text="{Binding Amount}" Placeholder="0.00" Keyboard="Numeric" />

        <Button Text="Сохранить" 
                Command="{Binding SaveTransactionCommand}"
                HorizontalOptions="Fill"
                Margin="0,20,0,0"
                CornerRadius="10"/>
    </VerticalStackLayout>

</ContentPage>
