<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:IsiklikRahahaldur.ViewModels"
             x:Class="IsiklikRahahaldur.Views.AddTransactionPage"
             x:DataType="vm:AddTransactionViewModel"
             Title="{Binding Title}">

    <!-- 
    ВАЖНО: Мы убрали отсюда блок <ContentPage.BindingContext>,
    потому что теперь контекст устанавливается в файле .xaml.cs,
    чтобы использовать Dependency Injection.
    -->

    <VerticalStackLayout Spacing="15" Padding="20">

        <Label Text="Описание" />
        <Entry Text="{Binding Transaction.Description}"
               Placeholder="Например, покупка продуктов" />

        <Label Text="Сумма" />
        <Entry Text="{Binding Transaction.Amount}"
               Keyboard="Numeric"
               Placeholder="0.00"/>

        <Button Text="Сохранить" 
                Command="{Binding SaveTransactionCommand}"
                BackgroundColor="MediumPurple"
                TextColor="White"
                CornerRadius="10"
                Margin="0,20,0,0" />

    </VerticalStackLayout>

</ContentPage>

